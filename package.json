    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@koa/bodyparser": "^6.0.0",
    "@koa/router": "^14.0.0",
    "koa": "^3.0.1",
    "zod": "^4.1.5"
